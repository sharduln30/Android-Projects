<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cetpainfotech.classifieds.Post_Ads"
    android:padding="20dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="31dp"
        android:text="title"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/etdescription"
        android:layout_alignStart="@+id/etdescription"
        android:layout_below="@+id/etdescription"
        android:layout_marginTop="46dp"
        android:src="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/gettitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="title"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/gettitle"
        android:layout_marginTop="28dp"
        android:text="Description" />

    <EditText
        android:id="@+id/etdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gettitle"
        android:layout_alignStart="@+id/gettitle"
        android:layout_below="@+id/description"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="description"
        android:inputType="textPersonName"
        android:singleLine="false" />

    <Button
        android:id="@+id/btpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etdescription"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etdescription"
        android:layout_marginBottom="28dp"
        android:background="@color/Trans_red"
        android:text="post"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
